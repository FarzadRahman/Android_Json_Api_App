<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/pd_nor"
        android:paddingTop="@dimen/pd_nor"


        />
    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tcllogo"
        android:paddingTop="@dimen/pd_lg"
        android:layout_below="@id/btn_skip"

        />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:hint="@string/email"
        android:layout_marginLeft="@dimen/pd_xl"
        android:layout_marginRight="@dimen/pd_xl"
        android:layout_marginTop="@dimen/pd_xl"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:hint="@string/password"
        android:layout_marginLeft="@dimen/pd_xl"
        android:layout_marginRight="@dimen/pd_xl"
        android:layout_marginTop="@dimen/pd_xl"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:text="Login"
        android:layout_marginLeft="@dimen/pd_xl"
        android:layout_marginRight="@dimen/pd_xl"
        android:layout_marginTop="@dimen/pd_xl"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"

        />

</RelativeLayout>
</ScrollView>